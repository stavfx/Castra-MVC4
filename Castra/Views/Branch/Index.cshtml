@model IEnumerable<Castra.Models.Branch>

@{
    ViewBag.Title = "Branches";
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<button id="openSearchButton"><i class="fa fa-plus"></i> Open Search options</button>

<!--Search Form-->
@using (Html.BeginForm())
{
    <p id="searchOptions">
        Address: @Html.TextBox("address") <br /><br />
        Name: @Html.TextBox("name") <br /><br />
        Phone: @Html.TextBox("phone") <br /><br />
        <input type="button" value="Filter" class="btn btn-danger" onclick="search()" />
    </p>
}

<!--Partial View for search results-->
<div id="partialContainer">
    @Html.Partial("~/Views/Shared/_BranchesPartial.cshtml", Model)
</div>

<!--JavaScript that is invoked in Filter Button (uses Ajax)-->
@section scripts{
    <script>
        function search() {
            var address = $("#address").val();
            var name = $("#name").val();
            var phone = $("#phone").val();
            $.ajax({
                type: "GET",
                url: "Branch/SearchPartial/",
                data: { address: address, name: name, phone: phone },
                success: function (jsReturnArgs) {
                    $("#partialContainer").html(jsReturnArgs); //the HTML returned from the controller
                },
                error: function (errorData) { onError(errorData); }
            });
        }
    </script>
}